{
    "manifest_version": 3,
    "name": "Highlight Sender",
    "version": "1.0",
    "description": "Send highlighted text to a backend API",
    "permissions": ["contextMenus", "scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": ["<all_urls>"]
  }